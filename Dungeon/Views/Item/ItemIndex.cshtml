@{
  Layout = "_Layout";
}
<div class="container text-center">
  <div class="well viewer">
    <h1>Item Editor</h1>
    <form class="form-group" action="/items/details/{id}" method="post">
      <h4>Select Item to View</h4>
      <select class="form-control" name="id" id="id">
        <option value="0">Empty</option>
        @{
          if (@Model.Count > 0)
          {
            foreach (var item in @Model)
            {
              <option value="@item.GetId()">@item.GetName()</option>
            }
          }
        }
      </select>
      <button type="submit" class="btn btn-danger">View Item</button>
    </form>
  </div>
  <div class="well adder">
    <h4>Create A New Item</h4>
    <form class="form-group" action="/items" method="post">
      <input class="form-control" type="text" name="newItemName" value="" placeholder="Enter item name">
      <button type="submit" class="btn btn-danger">Add Item</button>
    </form>
  </div>
</div>
