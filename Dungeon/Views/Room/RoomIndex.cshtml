@{
  Layout = "_Layout";
}
<div class="container text-center">
  <div class="well viewer">
    <h1>Room Editor</h1>
    <h4>Select Room to View</h4>
    <form class="form-group" action="/rooms/details/{id}" method="post">
      <select class="form-control" name="id" id="id">
      <option value="0">Empty</option>
      @{
        if (@Model.Count > 0)
        {
          foreach (var room in @Model)
          {
            <option value="@room.GetId()">@room.GetName()</option>
          }
        }
      }
      </select>
      <button type="submit" class="btn btn-danger">View Room</button>
    </form>
  </div>
  <div class="well adder">
    <h4>Create A New Room</h4>
    <form class="form-group" action="/rooms" method="post">
      <input class="form-control" type="text" name="newRoomName" value="" placeholder="Enter room name">
      <button type="submit" class="btn btn-danger">Add Room</button>
    </form>
  </div>
</div>
